<Window x:Class="SpaceInvaders.Wpf.ShellWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Space Invaders (Roguelike)" Height="720" Width="900" Background="#121212"
        Loaded="OnLoaded">

    <!-- Center the scaled UI within the window so manual scaling can't anchor it to a corner. -->
    <Grid>
        <Grid x:Name="Root" HorizontalAlignment="Center" VerticalAlignment="Center"
              RenderTransformOrigin="0.5,0.5">
            <Frame x:Name="RootFrame" NavigationUIVisibility="Hidden" />
        </Grid>
    </Grid>
</Window>
