<Page x:Class="SpaceInvaders.Wpf.Views.MainMenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Main Menu" Background="#121212">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="SPACE INVADERS" FontSize="48" Foreground="#FFFFFF" HorizontalAlignment="Center"/>

        <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" Width="320">
            <TextBlock x:Name="CoinsText" Text="Coins: 0" FontSize="20" Foreground="#D6D6D6" Margin="0,0,0,16" TextAlignment="Center"/>
            <Button Content="Start Run" Height="56" Margin="0,6" Click="OnStart" />
            <Button Content="Upgrades / Shop" Height="56" Margin="0,6" Click="OnShop" />
            <Button Content="Settings" Height="56" Margin="0,6" Click="OnSettings" />
            <Button Content="Quit" Height="56" Margin="0,6" Click="OnQuit" />
        </StackPanel>

        <TextBlock Grid.Row="2" Text="A/D or ←/→ to move, Space shoot" Foreground="#AAAAAA" HorizontalAlignment="Center"/>
    </Grid>
</Page>
